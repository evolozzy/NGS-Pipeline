source CORES

# GENERAL OPTIONS
THREADS=5
JOBBINS=5 
DATASOURCE=Data
REFERENCEFILE=/home/tholian/Nextcloud/GitHub/NGS-Pipeline/Dmel_mtDNA_ref_v6.fasta

# JAVA OPTIONS
# Heap size should be set to a value below (AVAILBLE_RAM/THREADS)
HEAPSIZE="-Xmx2g"
# Garbage collector should be set according to: https://www.oracle.com/webfolder/technetwork/tutorials/obe/java/gc01/index.html
GARBAGECOLLECTOR="-XX:ParallelGCThreads=$JAVAGCCORES"
JAVAOPTIONS="$HEAPSIZE $GARBAGECOLLECTOR"

# TEMPFILES takes the following options: 
# "K" for Keep
# "A" for Archive 
# "D" for Deletion 
ARCHIVEFILES="K"
ARCHIVEDIR=/home/tholian/tmp

# TRIMMING OPTIONS
TRIMQUALITY=25
ADAPTER1="AGATCGGAAGAGCACACGTCTGAACTCCAGTCA"
ADAPTER2="AGATCGGAAGAGCGTCGTGTAGGGAAAGAGTGT"
CLIP5_R1=5
CLIP5_R2=5
CLIP3_R1=5
CLIP3_R2=5
TRIMGALOREOPTIONS="--fastqc --cores $TRIMCORES -a $ADAPTER1 -a2 $ADAPTER2 --paired -q $TRIMQUALITY --retain_unpaired --clip_R1 $CLIP5_R1 --clip_R2 $CLIP5_R2 --three_prime_clip_R1 $CLIP3_R1 --three_prime_clip_R2 $CLIP3_R2 "


# ALIGNING OPTIONS
BWAMINSCOREOUTPUT=30
BWABATCHSIZE=10000000
BWAOPTIONS="-t $BWACORES -K $BWABATCHSIZE  -T $BWAMINSCOREOUTPUT "


# RGTAGS
RGTAGFILE=RGTAGS
ADDGROUPOPTIONS="VALIDATION_STRINGENCY=STRICT CREATE_INDEX=false" 

# VARIANT CALLING OPTIONS
SCALEMAPQ=50
BASEQUALMIN=20
VARQUALMIN=20
MAXDEPTH=2000

BCFMPILEUPOPTIONS="-B -C$SCALEMAPQ -q$BASEQUALMIN -Q$VARQUALMIN -d$MAXDEPTH -a '""AD,DP,SP,INFO/AD""' -Ou"
BCFCALLOPTIONS="-m -A -v -Ov"

VCFOUTPUTFILENAME="Migration2018-Dmel-pool"

